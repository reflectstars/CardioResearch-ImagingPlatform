[segmentation]

seg_dir=./example
seg_name=converted.inr
mesh_from_segmentation=1

[meshing]

readTheMesh=0
mesh_dir=.
mesh_name=mesh

facet_angle=30
facet_size=5.0
facet_distance=4
cell_rad_edge_ratio=2.0
cell_size=1.0

rescaleFactor=1.0  # rescaling for carp and vtk output

[laplacesolver]

abs_toll=1e-6 # Also for evaluating the thickness
rel_toll=1e-6
itr_max=500
dimKrilovSp=150
verbose=0

[output]

outdir=.
name=imgmesh

out_medit=0
out_carp=1
out_carp_binary=0
out_vtk=1
out_vtk_binary=0
out_potential=0
debug_output=0
debug_frequency=10000

[others]

eval_thickness=0
thickalgo=1
swapregions=1
verbose=0
